{% extends "front/base.html.twig" %}

{% block main %}

<h1> {{ front }} </h1>


{% for category in categories %}
		<img width=200px src="{{ asset('media/' ~ category.media) }}" alt="{{ category.name }}">
		<h2>
			<a href="{{ path("category_show", {'id' : category.id } ) }}">{{category.name}}</a>
		</h2>

	{% endfor %}

{% endblock %}
