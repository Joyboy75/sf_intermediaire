{% extends "admin/base.html.twig" %}

{% block main %}

<h1> {{ admin }} </h1>


{% for message in app.flashes('notice') %}
		<h3>{{ message }}</h3>
	{% endfor %}
	

	{% for product in products %}


	<div class="card">

			<img width= 200px src="{{ asset('media/' ~ product.media[0].src) }}" alt="{{product.media[0].alt}}">


		<h2>
			<a href="{{ path("admin_product_show", {'id' : product.id } ) }}">{{product.name}}</a>
		</h2>

	</div>

	{% endfor %}

{% endblock %}
